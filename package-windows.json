{
  "name": "lingo-dingo-website",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev:windows": "set NODE_ENV=development && npx tsx server/index.ts",
    "dev:unix": "NODE_ENV=development tsx server/index.ts",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start:windows": "set NODE_ENV=production && node dist/index.js",
    "start:unix": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "install:windows": "npm install && echo Windows setup complete",
    "setup:windows": "npm run install:windows && echo Ready to run: npm run dev:windows"
  }
}